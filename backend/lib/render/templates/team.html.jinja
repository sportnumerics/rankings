{% extends "base.html.jinja" %}
{% block head %}
  <title>{{ name }} ({{ year }})</title>
  {{ super() }}
  <style>
    .date {
      padding-right: 1rem;
    }

    .opponent {
      padding-right: 2rem;
    }

    .score {
      padding-right: 1rem;
    }
  </style>
{% endblock %}
{% block body %}
  <h1>{{ name }} ({{ year }})</h1>
  <table>
    <thead>
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Opponent</th>
        <th scope="col">Score</th>
      </tr>
    </thead>
    <tbody>
      {% for game in games %}
        <tr>
          <td class="date">{{ game.date.strftime('%b %d') }}</td>
          <td class="opponent">
            {%- if game.opponent.uri -%}
              <a href="{{ game.opponent.uri }}">
            {%- endif -%}
              {{ game.opponent.name }}
            {%- if game.opponent.uri -%}
              </a>
            {%- endif -%}
          </td>
          <td class="score">
            {%- if game.result -%}
            {{ game.result.points_for }}-{{ game.result.points_against }}
            {%- endif -%}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}